doctype transitional
html(xmlns='http://www.w3.org/1999/xhtml')
    head
        meta(name='viewport', content='width=device-width')
        meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
        title Email
        style(type='text/css').
            * {
                margin: 0;
                font-family: "Lato", Helvetica, Arial, sans-serif;
                box-sizing: border-box;
                font-size: 16px;
            }
            body {
                -webkit-font-smoothing: antialiased;
                -webkit-text-size-adjust: none;
                width: 100% !important;
                height: 100%;
                line-height: 1.6em;
            }
            table td {
                vertical-align: top;
            }
            body {
                background-color: #f8f8f8;
            }
            .body-wrap {
                background-color: #f8f8f8;
                width: 100%;
            }
            .container {
                display: block !important;
                max-width: 800px !important;
                margin: 0 auto !important;
                clear: both !important;
            }
            .content {
                max-width: 600px;
                margin: 0 auto;
                display: block;
                padding: 20px;
            }
            .main {
                background-color: #fff;
                border: 1.5px solid #e9e9e9;
                border-radius: 10px;
            }
            .content-wrap {
                padding: 20px;
            }
            .content-block {
                padding: 0 0 20px;
            }
            h1 {
                font-family: "Lato", Helvetica, Arial, "Lucida Grande", sans-serif;
                color: #000;
                margin: 40px 0 0;
                line-height: 1.2em;
                font-weight: 400;
            }
            h1 {
                font-size: 32px;
            }
            p, ul, ol {
                margin-bottom: 10px;
                font-weight: normal;
            }
            p li, ul li, ol li {
                margin-left: 5px;
                list-style-position: inside;
            }
            /* -------------------------------------
            LINKS & BUTTONS
            ------------------------------------- */
            a {
                color: #348eda;
                text-decoration: underline;
            }
            .btn-primary {
                text-decoration: none;
                color: #FFF;
                background-color: #348eda;
                border: solid #348eda;
                border-width: 10px 20px;
                line-height: 2em;
                font-weight: bold;
                text-align: center;
                cursor: pointer;
                display: inline-block;
                border-radius: 5px;
            }
            /* -------------------------------------
            RESPONSIVE AND MOBILE FRIENDLY STYLES
            ------------------------------------- */
            @media only screen and (max-width: 640px) {
                body {
                    padding: 0 !important;
                }
                h1, h2, h3, h4 {
                    font-weight: 800 !important;
                    margin: 20px 0 5px !important;
                }
                .container {
                    padding: 0 !important;
                    width: 100% !important;
                }
                .content {
                    padding: 0 !important;
                }
                .content-wrap {
                    padding: 10px !important;
                }
            }
    body(itemtype='EmailMessage')
        table.body-wrap
            tbody
                tr
                    td
                    td.container(width='800')
                        .content
                            table.main(width='100%', cellpadding='0', cellspacing='0', itemprop='action', itemtype='ConfirmAction')
                                tbody
                                    tr
                                        td.content-wrap
                                            meta(itemprop='name', content='')
                                            table(width='100%', cellpadding='0', cellspacing='0')
                                                tbody
                                                    tr
                                                        td.content-block
                                                            strong.
                                                                Hi, #{userName} #{lname}

                                                    tr
                                                        td.content-block
                                                            p.
                                                                Hi #{userName}, did you forget your password on an Animated Discovery of Neuroscience?
                                                                Go the following link to reset your password: #{resetPasswordLink}
                    td